# Template de variables de entorno para entorno de desarrollo
# Copia este archivo a .env y añade valores locales; NO lo subas a Git.

# ASP.NET / Dashboard
ASPNETCORE_URLS=http://localhost:5050
# Para desarrollo local: permitir transporte no seguro (solo en dev). En producción usar HTTPS.
ASPIRE_ALLOW_UNSECURED_TRANSPORT=true
# OTLP endpoint (dashboard telemetry). Puede apuntar a un collector local si lo tiene: http://localhost:4318
ASPIRE_DASHBOARD_OTLP_HTTP_ENDPOINT_URL=http://localhost:4318

# Host port overrides (usar si los puertos por defecto están en uso en la máquina local)
POSTGRES_HOST_PORT=5432
API_HTTP_HOST_PORT=8080
API_GRPC_HOST_PORT=8081
RABBITMQ_AMQP_HOST_PORT=5672
RABBITMQ_UI_HOST_PORT=15672
MEMCACHED_HOST_PORT=11211
KEYCLOAK_HOST_PORT=8080
PORTAL_HOST_PORT=3000

# PostgreSQL
POSTGRES_USER=dev
POSTGRES_PASSWORD=devpass
POSTGRES_DB=locksdb

# RabbitMQ
RABBITMQ_DEFAULT_USER=dev
RABBITMQ_DEFAULT_PASS=devpass

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin123
KC_HEALTH_ENABLED=true
KC_METRICS_ENABLED=true

# API / gRPC
AUTH_AUTHORITY=http://keycloak:8080/realms/locks
AUTH_AUDIENCE=locks-api
GRPC_PORT=8081

# Portal
NEXT_PUBLIC_OIDC_ISSUER=http://keycloak:8080/realms/locks
NEXT_PUBLIC_OIDC_CLIENT_ID=portal
NEXT_PUBLIC_API_BASE_URL=http://locks-api:8080
